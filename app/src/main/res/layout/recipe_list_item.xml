<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recipeListItemLayout"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:padding="10dp"
    android:background="?android:attr/selectableItemBackground">

    <!-- Recipe Name -->
    <TextView
        android:id="@+id/recipeItemNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recipe Name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true" />

    <!-- Meal Type -->
    <TextView
        android:id="@+id/recipeItemMealTypeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meal Type"
        android:textSize="14sp"
        android:textColor="#757575"
        android:layout_below="@id/recipeItemNameTextView"
        android:layout_alignStart="@id/recipeItemNameTextView"
        android:layout_marginTop="4dp" />

    <!-- Dietary Preference Icon -->
    <ImageView
        android:id="@+id/dietaryPreferenceIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_vegan"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true" />

</RelativeLayout>
